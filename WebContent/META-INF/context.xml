<?xml version="1.0" encoding="UTF-8"?>

<!-- Change the lines below according your RDBMS and DB -->
<Context>

	<Resource name="jdbc/ST4DB"
		auth="Container" 
		type="javax.sql.DataSource"
		driverClassName="com.mysql.cj.jdbc.Driver"
		maxTotal="100"
		maxIdle="30"
		initialSize="10"
		maxWaitMillis="10000"
		username="testuser"
		password="testpass"
		connectionProperties="useUnicode=yes;characterEncoding=utf8;"
		url="jdbc:mysql://localhost:3306/st4db"/>

</Context>
